<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/search_filters"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:orientation="vertical" 
	android:background="#BDBDBD"
	>

	<TextView
	    android:id="@+id/lbl_filters"
	    android:layout_width="match_parent"
	    android:layout_height="24dp"
	    android:text="@string/lbl_image_filters" 
	    android:gravity="center"
	    android:background="#00FF00"/>
	
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
	<TextView
        android:id="@+id/lblSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Image Size"
        android:layout_weight="1"
        />
	<Spinner
        android:id="@+id/spinnerImgSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
	</LinearLayout>
	
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
	<TextView
        android:id="@+id/lblColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Color Filter"
        android:layout_weight="1" />
	
	<Spinner
        android:id="@+id/spinnerImgColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
	</LinearLayout>
			
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
	<TextView
        android:id="@+id/lblType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Image Type" 
        android:layout_weight="1" />
		
	<Spinner
        android:id="@+id/spinnerImgType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"  />
	</LinearLayout>
		
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
	<TextView
        android:id="@+id/lblSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Site Filter" 
        android:layout_weight="1" />
	
	<EditText
		android:id="@+id/eTsite"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:inputType="text"
		android:imeOptions="actionDone"
		android:layout_weight="1"  />
	</LinearLayout>
	
</LinearLayout>
